              <input type="text" name="regis[email]" id="email" class="form-control input-lg" placeholder="Email" tabindex="1">
  					</div>
  				<!-- </div> -->
        </div>

        <div class="row">
  				<!-- <div class="col-xs-12 col-sm-6 col-md-6"> -->
