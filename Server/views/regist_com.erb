  						<input type="text" name="regis[name]" id="user_name" class="form-control input-lg" placeholder="company name" tabindex="2">
  					</div>
  				<!-- </div> -->
  			</div>

        <div class="row">
    			<div class="form-group">
    				<input type="text" name="regis[password]" id="password_confirmation" class="form-control input-lg" placeholder="Password" tabindex="3">
