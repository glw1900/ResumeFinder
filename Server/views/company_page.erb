	<html>
	<head>
	    <meta charset="utf-8">
	    <title>HomePage</title>
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
	    <link rel="stylesheet" href="css/bootstrap-theme.min.css">
	    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
	    <script src="js/bootstrap.min.js"></script>
	</head>
	<body>

	<br><br>
	  <div class="container-fluid">
	    <div class="row">

	      <div class="col-sm-3">
	        <h2>Welcome <%= @c.name %></h2>
	        <h3>  <%= @c.info %></h3>
	        <a href="/" class="btn btn-primary" role="button">Log Out</a>

	      </div>
	      <div class="col-sm-8">
					<!-- Request Applicant:
					<form action="/request" method="POST">
						<input type="text" name="request[appl_email]" value="Enter Applicant's Email">
						<input type="submit" value="Request" /> -->

						<div class="row">
								<form role="form" action="/request"method="POST">
				  			<h2>Request Applicant</h2>

				  			<hr class="colorgraph">

								<div class="row">
									<div class="col-sm-9">
				  				<!-- <div class="col-xs-12 col-sm-6 col-md-6"> -->
				  					<div class="form-group">
				  						<input type="text" name="request[appl_email]" id="email" class="form-control input-lg" placeholder="Applicant Email" tabindex="1">
				  					</div>
									</div>
									<div class="col-sm-3">
										<input type="submit" value="request" class="btn btn-primary btn-lg" tabindex="7">
				  				</div>
				  			</div>
								<!-- <hr class="colorgraph">
				  			<div class="row">
									<input type="submit" value="request" class="btn btn-primary btn-lg" tabindex="7">
				  			</div> -->
								</form>


			        <ul class="list-group">
								<h2>Requested Applicants</h2>
								<% if !@appl_list.nil? %>
									<% @appl_list.each do |appl| %>
				          	<li class="list-group-item">
											<a href = '/appl/<%= appl.email %>'><h3><%= appl.first_name %> <%= appl.last_name %></h3></a>
											<h3><small> <%= appl.summary %></small></h3>
									<% end %>
								<%else%>
									<p>Request some applicants!</p>
								<% end %>
			        </ul>
						</div>
					</div>

	      </div>
	    </div>
	  </div>

	</body>
	</html>
